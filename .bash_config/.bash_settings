# emacs shortcuts are bash default, such as Ctrl + L clear screen
set -o emacs
# set -o vi

# History size
HISTSIZE=2000
HISTFILESIZE=2000

# PATH include scripts
new_entry=$HOME/.bash_config/bin
case ":$PATH:" in
  *":$new_entry:"*) :;; # already there
  *) 
  PATH="$PATH:$new_entry";; 
esac


#printf "\n"
printf "   %s\n" "DATE: $(date "+%a, %d %b")"
#printf "   %s\n" "MEMORY: $(free | awk '/Mem/{print 100 - $3/$2 * 100 "%"}')"
printf "   %s\n" "CPU: $(cat /proc/cpuinfo | awk -F: '/model name/ {print $2; exit}')"
printf "   %s\n" "USER: $(echo $USER)"
printf "   %s\n" "HOSTNAME: $(hostname -f)"
printf "\n"
