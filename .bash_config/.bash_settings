# emacs shortcuts are bash default, such as Ctrl + L clear screen
set -o emacs
# set -o vi

# History size
HISTSIZE=2000
HISTFILESIZE=2000

# PATH include scripts
new_entry=$HOME/.bash_config/bin
case ":$PATH:" in
  *":$new_entry:"*) :;; # already there
  *) 
  PATH="$PATH:$new_entry";; 
esac


#printf "\n"
printf "   %s\n" "$(date "+ %a, %d %b, %l:%M %p")"
printf "   %s\n" "$(ansiweather)"
printf "\n"
